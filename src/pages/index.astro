---
import MainLayout from '../layouts/MainLayout.astro';
import PostCard from '../components/blog/PostCard.astro';
import db from '../db/database';

// Fetch featured posts
const featuredPosts: any = await db.query(`
  SELECT p.id, p.title, p.slug, p.excerpt, p.featured_image, p.published_at, p.reading_time,
         u.username, u.full_name,
         c.name as category_name, c.slug as category_slug
  FROM posts p
  JOIN users u ON p.author_id = u.id
  LEFT JOIN categories c ON p.category_id = c.id
  WHERE p.status = 'published' AND p.featured = 1
  ORDER BY p.published_at DESC
  LIMIT 3
`);

// Fetch recent posts by category
const categories: any = await db.query(`
  SELECT id, name, slug, description 
  FROM categories 
  ORDER BY name
  LIMIT 5
`);

// Get recent posts for each category
for (const category of categories) {
  const posts: any = await db.query(`
    SELECT p.id, p.title, p.slug, p.excerpt, p.featured_image, p.published_at, p.reading_time,
           u.username, u.full_name
    FROM posts p
    JOIN users u ON p.author_id = u.id
    WHERE p.status = 'published' AND p.category_id = ?
    ORDER BY p.published_at DESC
    LIMIT 4
  `, [category.id]);
  
  category.posts = posts;
}

// Format posts for display
const formattedFeaturedPosts = featuredPosts.map((post: any) => ({
  ...post,
  author: {
    username: post.username,
    full_name: post.full_name
  },
  category: post.category_name ? {
    name: post.category_name,
    slug: post.category_slug
  } : null
}));
---

<MainLayout
  title="OpportunityCenter - Scholarships, Jobs, and Internships in USA & Europe"
  description="Discover scholarships, jobs, internships, loan schemes, and earning methods in USA and Europe. Stay updated with the latest opportunities."
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-primary-600 to-primary-800 text-white py-16 md:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-3xl md:text-5xl font-bold mb-6 font-heading">
          Your Gateway to Global Opportunities
        </h1>
        <p class="text-xl md:text-2xl mb-8 text-primary-100">
          Discover scholarships, jobs, internships, and more in the USA and Europe
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <a href="/blog" class="bg-white text-primary-700 hover:bg-primary-50 px-6 py-3 rounded-md font-medium text-lg transition-colors duration-200">
            Explore Opportunities
          </a>
          <a href="/contact" class="bg-transparent border-2 border-white text-white hover:bg-white hover:text-primary-700 px-6 py-3 rounded-md font-medium text-lg transition-colors duration-200">
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Categories Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold font-heading text-gray-900 mb-4">Explore by Category</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Find the perfect opportunity that matches your interests and goals
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-6">
        {categories.map((category: any) => (
          <a href={`/category/${category.slug}`} class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300 p-6 text-center group">
            <div class="mb-4 text-primary-600 mx-auto w-16 h-16 flex items-center justify-center bg-primary-100 rounded-full group-hover:bg-primary-200 transition-colors duration-300">
              {category.slug === 'scholarships' && (
